{
  "name": "@kuhltime/tspb",
  "version": "1.0.0",
  "description": "An opinionated boilerplate for creating typescript packages.",
  "author": "AndrÃ© Kuhlmann",
  "license": "MIT",
  "type": "module",
  "bin": {
    "tspb": "dist/cli/cli/index.js"
  },
  "packageManager": "pnpm@8.0.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KuhlTime/tspb.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "public"
  },
  "keywords": [
    "typescript",
    "template",
    "package"
  ],
  "main": "dist/cjs/index.js",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "bin",
    "dist",
    "types",
    "index.cjs"
  ],
  "scripts": {
    "commit": "cz",
    "build": "npm run clean && concurrently -n esm,cjs,cli -c blue,magenta,gray \"tsc --build tsconfig.esm.json\" \"tsc --build tsconfig.cjs.json\" \"tsc --build tsconfig.cli.json\" && scripts/package-fixup.sh && node scripts/esm-import-fixup.js",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "preinstall": "npx -y only-allow pnpm",
    "lint": "eslint --ext .ts src",
    "test": "jest",
    "dist": "npm run build",
    "generate:docs": "documentation build src/** -f html --github -o docs"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.6.5",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^10.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^11.0.3",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "commitlint": "^17.6.5",
    "concurrently": "^8.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "documentation": "14.0.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-import-resolver-jest": "^3.0.2",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-check-file": "^2.4.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jsdoc": "^46.2.6",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jsdoc": "^4.0.2",
    "only-allow": "^1.1.1",
    "prettier": "^2.8.8",
    "prettier-plugin-jsdoc": "^0.4.2",
    "pretty-quick": "^3.1.3",
    "rimraf": "^5.0.1",
    "semantic-release": "^21.0.5",
    "ts-jest": "^29.1.0",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "size-limit": [
    {
      "path": "dist/esm/index.js",
      "limit": "4500 ms"
    }
  ]
}
